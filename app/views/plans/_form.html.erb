<div class="row">
  <div class="col-lg-4 col-sm-12">
    <%= form_with(model: plan, local: true) do |f| %>
      <% if plan.errors.any? %>
        <div class="alert alert-danger" id="error_explanation">
          <h4><%= pluralize(plan.errors.count, "error") %> stopped you from saving this plan:</h4>

          <ul>
          <% plan.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <label class="input__label" for="plan_title">
          Plan Name
        </label>
        <%= f.text_field :title, :class => "form-control mb-2" %>
      </div>

      <div class="field">
        <label class="input__label" for="plan_description">
          Detailed instructions for this plan.
        </label>
        <%= f.text_area :description, :class => "form-control mb-2" %>
      </div>

      <div class="field">
        <label class="input__label" for="plan_time">
          Date and Time for Execution
        </label><br/>
        <%= f.datetime_select("time", ampm: true) %>
        <!-- f.text_field :time, id: "datetimepicker", :class => "form-control mb-2" -->
      </div>

      <div class="actions">
        <%= f.submit :class => "mt-3 btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>